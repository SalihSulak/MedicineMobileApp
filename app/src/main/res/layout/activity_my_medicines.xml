<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#347B98"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todayTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#092834"
                android:fontFamily="@font/audiowide"
                android:lineSpacingExtra="14sp"
                android:padding="10dp"
                android:text="@string/todayIs"
                android:textAlignment="center"
                android:textColor="#F0F7D4"
                android:textSize="34sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#347B98"
                android:padding="10dp"
                android:text="Bugün içmeniz gereken ilaçlar"
                android:textColor="#F0F7D4"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/medicines"
                android:layout_width="409dp"
                android:layout_height="459dp"
                android:background="#347B98"
                android:padding="10dp"
                android:scrollbars="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/addNewMedicineButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="#092834"
                android:fontFamily="@font/audiowide"
                android:text="Yeni İlaç Ekle"
                android:textColor="#F0F7D4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/listAllMedicinesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#092834"
                android:fontFamily="@font/audiowide"
                android:text="Tüm İlaçlarım"
                android:textColor="#F0F7D4"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>