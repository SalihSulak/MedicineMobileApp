<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllMedicines">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFD7EA"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todayTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0B3954"
                android:fontFamily="@font/amaranth"
                android:lineSpacingExtra="14sp"
                android:padding="20dp"
                android:text="@string/allMedicinesTitle"
                android:textAlignment="center"
                android:textColor="#BFD7EA"
                android:textSize="34sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BFD7EA"
                android:fontFamily="@font/amaranth"
                android:padding="10dp"
                android:text="@string/allMedicinesText"
                android:textColor="#C81D25"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/medicines"
                android:layout_width="409dp"
                android:layout_height="459dp"
                android:background="#BFD7EA"
                android:padding="10dp"
                android:scrollbars="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/addNewMedicineButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="#0B3954"
                android:drawableLeft="@drawable/pill_add_icon__1_"
                android:fontFamily="@font/amaranth"
                android:padding="30dp"
                android:text="Yeni İlaç Ekle"
                android:textColor="#BFD7EA"
                android:textSize="24sp" />

            <Button
                android:id="@+id/listAllMedicinesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0B3954"
                android:drawableLeft="@drawable/rsz_pills_red_icon__1_"
                android:fontFamily="@font/amaranth"
                android:padding="30dp"
                android:text="Bugün İçmeniz gereken İlaçlarınız"
                android:textColor="#BFD7EA"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>